{% extends "DGTicketingBundle::layout.html.twig" %}

{% block title %}
  Votre Commande - {{ parent() }}
{% endblock %}

{% block dgticketing_body %}


  <h2>Récapitulatif de votre commande</h2>

    {# Barre de Progression #}
    <div class="progress">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%">
        <span class="sr-only">25% Complete</span>
      </div>
    </div>

 <p>Numéro de commande (ID) : {{ booking.id }}</p>
 <p>Date de la commande : {{ booking.bookingDate|date('d/m/Y') }}</p>
 <p>Date de la visite : {{ booking.visiteDay|date('d/m/Y') }}</p>
 <p>Email de commande : {{ booking.email }}</p>
 <p>Total de la commande : {{ booking.totalBooking }} €</p>
 <a href="../paiement/{{ booking.id }}" class="btn btn-default btn-primary">Payer</a>

  {% if listTickets|length > 0 %}
    <div>
      Cette commande contient les tickets suivants :
        {% for ticket in listTickets %}
          <div class="well">          
          	<ul>
  	          <li> Nom : {{ ticket.nameTicket }}</li>
  	          <li> Prénom : {{ ticket.firstnameTicket }}</li>
  	          <li> Date de naissance : {{ ticket.brithDate|date('d/m/Y') }}</li>
              <li> Type de ticket : {{ ticket.ticketType }}</li>
              <li> Tarif : {{ ticket.ticketPrice }} €</li>
              {% if ticket.reducedPrice == 1 %}
                 <p> Tarif réduit</p>
                 <p>Une pièce justificative vous sera demandée.</p>
              {% endif %}              
  	        </ul>
  	    </div>
        {% endfor %}
    </div>
  {% endif %}

  <a href="../paiement/{{ booking.id }}" class="btn btn-default btn-primary">Payer</a>




{% endblock %}