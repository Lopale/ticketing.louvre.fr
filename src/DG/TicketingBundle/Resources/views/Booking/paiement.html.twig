{% extends "DGTicketingBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block dgticketing_body %}


  <h2>Récapitulatif de votre commande</h2>

    {# Barre de Progression #}
    <div class="progress">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
        <span class="sr-only">50% Complete</span>
      </div>
    </div>


    {#

    Besoin de :
    	- ID commande
    	- Total commande
    	- Nom
    	- Code de carte bleu
    	- Mois de validité
    	- Année de validité
    	- Cryptogramme

    #}




    <div class="well">
      <p>Numéro de commande (ID) : {{ booking.id }}</p>
      <p>Total : {{ booking.totalBooking }} €</p>
      <form action="../terminated/{{ booking.id }}" method="POST">
        <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="pk_test_rxvb80iUNvW5sDrgAFRJ8SUl"
                data-amount="{{ booking.totalBooking }}00"
                data-name="oc-stripe"
                data-description="Widget"
                data-locale="auto"
                data-currency="eur">
        </script>
    </form>
  </div>






{% endblock %}